<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@application.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.application.MainController">
   <left>
      <VBox id="menubg" prefHeight="695.0" prefWidth="224.0" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToHome" prefHeight="87.0" prefWidth="249.0" stylesheets="@application.css" text="Home">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToProfits" prefHeight="87.0" prefWidth="249.0" stylesheets="@application.css" text="Winsten">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button id="btnPressed" mnemonicParsing="false" onAction="#switchToCalendar" prefHeight="87.0" prefWidth="249.0" stylesheets="@application.css" text="Kalender">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToCostumers" prefHeight="87.0" prefWidth="249.0" stylesheets="@application.css" text="Klanten">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToHotels" prefHeight="87.0" prefWidth="249.0" stylesheets="@application.css" text="Hotels">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToSelection" prefHeight="87.0" prefWidth="249.0" stylesheets="@application.css" text="Eigen Selectie">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox id="mainbg" alignment="CENTER" stylesheets="@application.css">
         <children>
            <Label alignment="CENTER" text="\$100.000" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="66.0" />
               </font>
            </Label>
            <Separator prefHeight="177.0" prefWidth="1056.0" visible="false" />
            <LineChart fx:id="profitLine" title="Winsten van de afgelopen 12 maanden" VBox.vgrow="ALWAYS">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
         </children>
      </VBox>
   </center>
</BorderPane>
